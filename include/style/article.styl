article
    &.media
        color: $text-light

        a
            color: inherit

            &:hover
                color: $primary

        .image
            width: 64px
            height: 64px

            img
                object-fit: cover
                width: 100%
                height: 100%

        .title
            @extend .is-size-6
            margin-bottom: .25em

        .date, .categories
            @extend .is-size-7

        .categories
            @extend .is-uppercase